<Window x:Class="ContactListApp.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Contact Manager" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="LightGray">
            <Button Content="Alla Kontakter" Width="150" Margin="5" Click="ShowAllContacts_Click" />
            <Button Content="Lägg till Kontakt" Width="150" Margin="5" Click="ShowCreateContact_Click" />
        </StackPanel>

        <Frame x:Name="MainFrame" Margin="0,50,0,0" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
